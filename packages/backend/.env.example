# Sentinel Grid Backend - Environment Variables
# Copy to .env and customize

# =============================================================================
# Server
# =============================================================================
PORT=4000
HOST=0.0.0.0
NODE_ENV=development

# =============================================================================
# Security
# =============================================================================
API_KEY=demo-api-key-change-in-production
CORS_ORIGIN=*

# =============================================================================
# Database
# =============================================================================
DB_PATH=./data/sentinel.db

# =============================================================================
# Simulation
# =============================================================================
SIMULATION_SEED=12345
NODE_COUNT=200
TICK_INTERVAL_MS=3000
PREDICTION_INTERVAL_MS=10000

# =============================================================================
# IPFS / Web3.Storage
# =============================================================================
# Get token from https://web3.storage
WEB3STORAGE_TOKEN=

# Set to 'true' to use local IPFS node instead of Web3.Storage
IPFS_LOCAL=false
IPFS_API_URL=http://localhost:5001

# =============================================================================
# Integrity / Signing
# =============================================================================
# HMAC key for signing pinned artifacts - CHANGE THIS IN PRODUCTION!
PIN_HMAC_KEY=demo-hmac-key-change-in-production

# =============================================================================
# Blockchain
# =============================================================================
# Set to 'true' to enable on-chain anchoring. Requires valid RPC and contract.
# For demos without blockchain, leave as 'false' - audit logging still works.
ENABLE_BLOCKCHAIN=false

# Local Hardhat node
HARDHAT_RPC=http://localhost:8545

# Base Testnet
BASE_RPC_URL=https://sepolia.base.org

# Optimism Testnet
OPTIMISM_RPC_URL=https://sepolia.optimism.io

# Private key for signing transactions
# This is Hardhat's default account #0 - DO NOT USE IN PRODUCTION
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Deployed contract address (set after deployment)
CONTRACT_ADDRESS=

# =============================================================================
# Scheduler
# =============================================================================
ANCHOR_CRON=*/5 * * * *
AUTO_ANCHOR=false
